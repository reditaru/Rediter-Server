{   
    "parser": "babel-eslint",
    "extends": ["airbnb-base","koa"],
    "rules": {
        "generator-star-spacing": [0],
        "spaced-comment": [0],
        "no-empty": [0],
        "semi":[0],
        "no-mixed-spaces-and-tabs": [0],
        "global-require": [0],
        "linebreak-style": [0],
        "import/no-extraneous-dependencies":["error",{"devDependencies":true}],
        "indent": [0],
        "prefer-arrow-callback":[0],
        "func-names":[0],
        "object-curly-newline":[0],
        "no-param-reassign":[0],
        "prefer-const":"warn",
        "no-cond-assign":[0],
        "prefer-destructuring":[0],
        "no-unused-vars":[0],
        "consistent-return":[0]
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    }
}